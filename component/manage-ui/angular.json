{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "workflow-manager-ui": {
            "root": "",
            "sourceRoot": "src",
            "projectType": "application",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "aot": true,
                        "outputPath": "../manage-service/src/main/webapp/public",
                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "tsConfig": "src/tsconfig.json",
                        "assets": [
                            "src/images",
                            "src/assets",
                            "src/favicon.ico",
                            "src/config.json"
                        ],
                        "styles": [
                            "node_modules/bootstrap/dist/css/bootstrap.min.css",
                            "node_modules/animate.css/animate.css",
                            "node_modules/ng2-toasty/bundles/style-material.css",
                            "node_modules/material-design-icons/iconfont/material-icons.css",
                            "src/styles/styles.scss",
                            "node_modules/font-awesome/css/font-awesome.css"
                        ],
                        "scripts": [
                            "node_modules/chart.js/dist/Chart.js"
                        ]
                    },
                    "configurations": {
                        "production": {
                            "budgets": [{
                                "type": "anyComponentStyle",
                                "maximumWarning": "6kb"
                            }],
                            "optimization": true,
                            "outputHashing": "all",
                            "sourceMap": false,
                            "extractCss": true,
                            "namedChunks": false,
                            "extractLicenses": true,
                            "vendorChunk": false,
                            "buildOptimizer": true,
                            "fileReplacements": [{
                                "replace": "src/environments/environment.ts",
                                "with": "src/environments/environment.prod.ts"
                            }]
                        }
                    }
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "options": {
                        "browserTarget": "workflow-manager-ui:build"
                    },
                    "configurations": {
                        "production": {
                            "browserTarget": "workflow-manager-ui:build:production"
                        }
                    }
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "browserTarget": "workflow-manager-ui:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "src/test.ts",
                        "karmaConfig": "./karma.conf.js",
                        "scripts": [
                            "node_modules/chart.js/dist/Chart.js"
                        ],
                        "styles": [
                            "node_modules/bootstrap/dist/css/bootstrap.min.css",
                            "node_modules/animate.css/animate.css",
                            "node_modules/ng2-toasty/bundles/style-material.css",
                            "node_modules/material-design-icons/iconfont/material-icons.css",
                            "src/styles/styles.scss",
                            "node_modules/font-awesome/css/font-awesome.css"
                        ],
                        "assets": [
                            "src/images",
                            "src/assets",
                            "src/favicon.ico",
                            "src/config.json"
                        ]
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [],
                        "exclude": []
                    }
                }
            }
        },
        "workflow-manager-ui-e2e": {
            "root": "e2e",
            "sourceRoot": "e2e",
            "projectType": "application",
            "architect": {
                "e2e": {
                    "builder": "@angular-devkit/build-angular:protractor",
                    "options": {
                        "protractorConfig": "./protractor.conf.js",
                        "devServerTarget": "workflow-manager-ui:serve"
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [],
                        "exclude": []
                    }
                }
            }
        }
    },
    "defaultProject": "workflow-manager-ui",
    "schematics": {
        "@schematics/angular:component": {
            "prefix": "app",
            "style": "scss"
        },
        "@schematics/angular:directive": {
            "prefix": "app"
        }
    }
}